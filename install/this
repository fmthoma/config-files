#!/usr/bin/env bash

set -e
cd ~

for DOTFILE in .compton.conf \
               .config \
               .gitconfig \
               .i3 \
               .i3blocks.conf \
               .msmtprc \
               .mutt.d \
               .muttrc \
               .nixpkgs \
               .profile \
               .spacemacs \
               .stack \
               .tigrc \
               .urxvt \
               .vim \
               .vimperatorrc \
               .vimrc \
               .xprofile \
               .Xresources \
               .Xresources.d \
               .zsh \
               .zshrc; do
  if [ -e $DOTFILE ]; then
    if [ -h $DOTFILE ]; then rm $DOTFILE
    else                     mv $DOTFILE "$DOTFILE.bak"
    fi
  fi
  ln -s "config-files/$DOTFILE"
done
