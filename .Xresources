#include ".Xresources.d/solarized-dark.xresources"
#include ".Xresources.d/tango-colors.xresources"

Xft.dpi: 96

URxvt.saveLines: 10000
URxvt.scrollBar: false
URxvt.secondaryScroll: true
URxvt.font: xft:Imposevka Expanded:size=12
URxvt.depth: 32
URxvt.background: [95]#002b36
scratchpad.background: [80]#002b36

URxvt-tango-light.foreground: TANGO_0
URxvt-tango-light.background: TANGO_15
! Black
URxvt-tango-light.color0:  TANGO_0
URxvt-tango-light.color8:  TANGO_8
! Red
URxvt-tango-light.color1:  TANGO_1
URxvt-tango-light.color9:  TANGO_9
! Green
URxvt-tango-light.color2:  TANGO_2
URxvt-tango-light.color10: TANGO_10
! Yellow
URxvt-tango-light.color3:  TANGO_3
URxvt-tango-light.color11: TANGO_11
! Blue
URxvt-tango-light.color4:  TANGO_4
URxvt-tango-light.color12: TANGO_12
! Purple
URxvt-tango-light.color5:  TANGO_5
URxvt-tango-light.color13: TANGO_13
! Cyan
URxvt-tango-light.color6:  TANGO_6
URxvt-tango-light.color14: TANGO_14
! White
URxvt-tango-light.color7:  TANGO_7
URxvt-tango-light.color15: TANGO_15

! Fix ctrl+arrow and keypad in vim
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.KP_Add: +
URxvt.keysym.KP_Subtract: -
URxvt.keysym.KP_Multiply: *
URxvt.keysym.KP_Divide: /
URxvt.keysym.KP_Decimal: .
URxvt.keysym.KP_Separator : ,
URxvt.keysym.KP_1: 1
URxvt.keysym.KP_2: 2
URxvt.keysym.KP_3: 3
URxvt.keysym.KP_4: 4
URxvt.keysym.KP_5: 5
URxvt.keysym.KP_6: 6
URxvt.keysym.KP_7: 7
URxvt.keysym.KP_8: 8
URxvt.keysym.KP_9: 9
URxvt.keysym.KP_0: 0

URxvt.perl-ext-common: font-size,selection-to-clipboard

! Change font size on the fly
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease

! Fix stupid ctrl+shift behaviour
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt*cutchars: "\"()*,<>[]{}|':"
